<h1 class="text-center">Space list</h1>

<div class="text-center padded">
  <%= link_to "Create a space", new_space_path, class: "btn btn-primary" %>
</div>

<div class="container">
  <div class="row">
    <% @spaces.each do |space| %>
      <div class="col-xs-12 col-sm-4">
        <div class="card text-center">

          <% if space.photo.nil? %>
            <div class="card-header" style="background-image: url('http://placehold.it/350x150')">
            </div>
          <% else %>
            <div class="card-header" style="background-image: url('<%= cl_image_path space.photo, height: 300, width: 400, crop: :fill %>')">
            </div>
          <% end %>
          <div class="card-body">
            <%= link_to space.name, space_path(space) %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

