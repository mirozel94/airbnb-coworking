<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <h1><%= @space.name %></h1>
      <%= simple_form_for [@space] do |f| %>
        <%= f.input :name %>
        <%= f.input :address %>
        <%= f.input :description %>
        <%= f.input :capacity %>
        <%= f.input :price %>
        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %>
        <%= f.button :submit, class: "btn btn-primary"  %>
        <%= f.submit %>
      <% end %>
      <%= link_to 'Back', spaces_path %>
    </div>
  </div>
</div>
